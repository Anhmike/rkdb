OSFLAG :=
MS :=

ifeq ($(OS),Windows_NT)
  OSFLAG = w
  ifeq "$(WIN)" "64"
    MS = 64
  else
    MS = 32
  endif
else
  UNAME_S := $(shell uname -s)
  ifeq ($(UNAME_S),Linux)
    OSFLAG = l
  endif
  ifeq ($(UNAME_S),Darwin)
    OSFLAG = m
  endif
  ifeq ($(UNAME_s),MSYS_NT-6.3-WOW)
  	OSFLAG = w
  endif
  SUB_UNAME := $(findstring MINGW32, $(UNAME_S))
  $(info UNAME_S="$(UNAME_S)")
  ifeq ($(SUB_UNAME), MINGW32)
    OSFLAG = w
  endif
  MS=$(shell getconf LONG_BIT)  # 32/64
endif
QARCH=$(OSFLAG)$(MS)

PKG_CFLAGS=-D_GNU_SOURCE
ifeq ($(OSFLAG),w)
PKG_LIBS=$(addsuffix /e_static.lib,$(QARCH)) -lws2_32
else
PKG_LIBS=$(addsuffix /e.o,$(QARCH))
endif
OBJECTS=rkdb.o